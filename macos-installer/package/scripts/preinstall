#!/bin/bash

logMessage() {
    echo "$(date -u): $1" >>/var/log/packet-sentry-preinstall.log
}

showErrorDialog() {
    local errorMessage="$1"
    if [ -z "$errorMessage" ]; then
        errorMessage="‚ö†Ô∏è An unexpected error occurred. Please try again."
    fi
    osascript <<EOF
tell app "System Events"
    display dialog "${errorMessage}" with title "‚ö†Ô∏è Error" buttons {"Close"} default button "Close"
end tell
EOF
}

logMessage "üöÄ Executing pre-install steps..."
installKey=""

osascript <<EOF
tell app "System Events"
    display dialog "üëã Welcome to the Packet Sentry installation wizard!" with title "üì¶ Packet Sentry Installation" buttons {"Cancel", "Continue"} default button "Continue"
end tell
EOF

if [ $? -ne 0 ]; then
    logMessage "‚ùå Failed to display welcome dialog via osascript."
    showErrorDialog "‚ö†Ô∏è The installation wizard failed to open."
    exit 1
fi

# Prompt for the install key and ensure it's not empty
while [[ -z "$installKey" ]]; do
    if [[ -z "$installKey" ]]; then
        message="üîë Please enter your Packet Sentry install key:"
    else
        message="‚ùå Install key cannot be empty. Please enter your Packet Sentry install key:"
    fi

    logMessage "üì® Prompting for install key..."
    installKey=$(
        osascript <<EOF
            with timeout of (30 * 60) seconds
                set dialogTitle to "üîë Packet Sentry Install Key"
                set dialogMessage to "${message}"
                set myReply to text returned of (display dialog dialogMessage with title dialogTitle default answer "" buttons {"Cancel", "Continue"} default button 2)
            end timeout
EOF
    )

    if [ $? -ne 0 ]; then
        logMessage "‚ùå Failed to get install key via osascript."
        showErrorDialog "‚ö†Ô∏è The installation wizard failed to collect the install key."
        exit 1
    fi

    if [[ -z "$installKey" ]]; then
        logMessage "‚ö†Ô∏è User submitted an empty install key."
        showErrorDialog "‚ùå Install key cannot be empty."
    fi
done

logMessage "‚úÖ Valid (non-empty) install key received."

# Create the bootstrap file with the install key
agentInstallDir="/opt/packet-sentry"
if [ ! -d "$agentInstallDir" ]; then
    logMessage "üìÅ Creating directory: $agentInstallDir"
    mkdir -p "$agentInstallDir"
    if [ $? -ne 0 ]; then
        logMessage "‚ùå Failed to create directory: $agentInstallDir"
        showErrorDialog "‚ö†Ô∏è The installation wizard failed to prepare the installation directory."
        exit 1
    fi
fi

bootstrapFile="${agentInstallDir}/agentBootstrap.json"

logMessage "üìù Creating bootstrap file at ${bootstrapFile}..."
cat <<-EOF >"${bootstrapFile}"
{
    "installKey": "${installKey}"
}
EOF

if [ $? -ne 0 ]; then
    logMessage "‚ùå Failed to write to bootstrap file."
    showErrorDialog "‚ö†Ô∏è The installation wizard failed to save the install key."
    exit 1
fi

logMessage "‚úÖ Successfully wrote to bootstrap file."

osascript <<EOF
tell app "System Events"
    display dialog "‚úÖ Install key received!" with title "üéâ Success" buttons {"Finish"} default button "Finish"
end tell
EOF

if [ $? -ne 0 ]; then
    logMessage "‚ö†Ô∏è Failed to display finish dialog via osascript."
fi

logMessage "üéØ Pre-install steps complete."
exit 0
